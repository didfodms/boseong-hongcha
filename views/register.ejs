  <body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
      <div class="container">
        <div class="card login-card">
          <div class="row no-gutters">
            <div class="col-md-5">
              <img src="login_image.png" alt="login" class="login-card-img" />
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <div class="brand-wrapper">
                  <img src="big_logo_medi-velop2.png" alt="logo" class="logo" />
                </div>
                <p class="login-card-description">당신의 계정을 만드세요!</p>
                <form
                  id="registerForm"
                  name="register-form"
                  method="POST"
                  action="/register"
                >
                  <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <input
                      type="email"
                      name="email"
                      id="email"
                      class="form-control"
                      placeholder="Email address"
                    />
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Password</label>
                    <input
                      type="password"
                      name="password"
                      id="password"
                      class="form-control"
                      placeholder="***********"
                    />
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only"
                      >Confirm Password</label
                    >
                    <input
                      type="password"
                      name="confirm"
                      id="confirm"
                      class="form-control"
                      placeholder="***********"
                    />
                  </div>
                  <input
                    name="register"
                    id="register"
                    class="btn btn-block login-btn mb-4"
                    value="회원가입"
                  />
                </form>
                <script>
                  const registerFormEl =
                    document.querySelector("#registerForm");
                  const emailEl = registerFormEl.querySelector("#email");
                  const passwordEl = registerFormEl.querySelector("#password");
                  const confirmEl = registerFormEl.querySelector("#confirm");
                  const registerBtnEl =
                    registerFormEl.querySelector("#register");

                  registerBtnEl.addEventListener("click", async function () {
                    console.log("click!");

                    if (passwordEl.value !== confirmEl.value) {
                      Swal.fire(
                        "비밀번호 확인 안됨!",
                        "비밀번호 확인란을 다시 입력해주세요",
                        "error"
                      );
                    } else {
                      // email이 중복되는지 체크
                      fetch("/register/email-duplicate-check", {
                        method: "POST",
                        headers: {
                          "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                          email: emailEl.value,
                        }),
                      })
                        .then((res) => res.json())
                        .then((data) => {
                          console.log(data);
                          if (data.result === "error") {
                            Swal.fire(
                              "회원가입 실패!",
                              "중복되는 이메일 입니다",
                              "error"
                            );
                          } else {
                            fetch("/register", {
                              method: "POST",
                              headers: {
                                "Content-Type": "application/json",
                              },
                              body: JSON.stringify({
                                email: emailEl.value,
                                password: passwordEl.value,
                              }),
                            })
                              .then((res) => res.json())
                              .then((data) => {
                                if (data.result === "error") {
                                  Swal.fire(
                                    "회원가입 실패!",
                                    "회원 추가 과정에서 오류가 발생했습니다",
                                    "error"
                                  );
                                } else {
                                  Swal.fire(
                                    "회원가입 성공!",
                                    "어서오세요! 보성홍차 입니다 :)",
                                    "success"
                                  );
                                }
                              });
                          }
                        });
                    }
                  });
                </script>
