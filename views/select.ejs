<form id="themeForm">
    <label for="themeSelect">테마 선택:</label>
    <select id="themeSelect" name="theme">
        <option value="default">기본 테마</option>
        <option value="customTheme1">커스텀 테마 1</option>
        <option value="customTheme2">커스텀 테마 2</option>
        <!-- 추가적인 테마 옵션들... -->
    </select>
    <button type="submit">PPT 생성</button>
</form>

<script>
    const themeForm = document.getElementById("themeForm");

        themeForm.addEventListener("submit", async (event) => {
            event.preventDefault();

            const formData = new FormData(themeForm);
            const selectedTheme = formData.get("theme");

            const response = await fetch("/createPPT", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    chatGPT: "<ChatGPT의 응답>",
                    theme: selectedTheme,
                }),
            });
        });

</script>